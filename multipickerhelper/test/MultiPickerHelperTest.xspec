<?xml version="1.0" encoding="utf-8"?>
<x:description
	stylesheet="MultiPickerHelperSample.xslt"
	xslt-version="1.0"
	xmlns:x="http://www.jenitennison.com/xslt/xspec"
>
	<x:scenario label="when processing an empty MNTP property">
		<x:context mode="multipicker">
			<relatedLinks>
				<MultiNodePicker>
				</MultiNodePicker>
			</relatedLinks>
		</x:context>
		<x:expect label="it should not produce any output" test="()" />
	</x:scenario>
	
	<x:scenario label="when processing the MNTP fixture - Doc[1]">
		<x:context href="fixtures/mntp-doc.xml" select="/root/Doc[1]/mntpProperty" mode="multipicker" />
		<x:expect label="it should produce a list of 4 nodes in sequential order">
			<p>Node 1</p>
			<p>Node 2</p>
			<p>Node 3</p>
			<p>Node 4</p>
		</x:expect>
	</x:scenario>

	<x:scenario label="when processing the MNTP fixture - Doc[2]">
		<x:context href="fixtures/mntp-doc.xml" select="/root/Doc[2]/mntpProperty" mode="multipicker" />
		<x:expect label="it should produce a list of 4 nodes in the correct order">
			<p>Node 3</p>
			<p>Node 2</p>
			<p>Node 4</p>
			<p>Node 1</p>
		</x:expect>
	</x:scenario>

	<x:scenario label="when processing the MNTP fixture - Doc[3]">
		<x:context href="fixtures/mntp-doc.xml" select="/root/Doc[3]/mntpProperty" mode="multipicker" />
		<x:expect label="it should produce a list of 3 nodes in the correct order">
			<p>Node 5.2</p>
			<p>Node 5</p>
			<p>Node 5.1</p>
		</x:expect>
	</x:scenario>

	<x:scenario label="when processing the MNTP fixture - Doc[4]">
		<x:context href="fixtures/mntp-doc.xml" select="/root/Doc[4]/mntpProperty" mode="multipicker" />
		<x:expect label="it should *not* include nodes that don't exist">
			<p>Node 5.2</p>
			<p>Node 5</p>
			<p>Node 5.1</p>
		</x:expect>
	</x:scenario>

</x:description>